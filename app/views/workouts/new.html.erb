<div class="background-index <%=@randomback%>"></div>
<div class="container-background"></div>
<div class="spacer"></div>

<div class="container d-flex align-items-center">
<%= form_with model: @workout, local: true, class: "w-100" do |f| %>
  <div class="card-group w-100">
    <div class="card">
      <div class="card-body">
      <h5 class="card-title">New Workout</h5>
      <small class="form-text mb-1">* = Required fields</small>
        
        <div class="form-group">
          <%= f.label :title, "Title*" %>
          <%= f.text_field :title, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :category, "Category*" %>
          <%= f.select :category, options_for_select([["Strength"],["Power"],["Endurance"],["Conditioning"],["Specific"],["Other"]]),{}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :shared, "Visible to others?*" %>
          <%= f.select :shared, options_for_select([["Public", true],["Private", false]]),{}, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="form-group">
          <%= f.label :description, "Description*" %>
          <%= f.text_area :description, required: true, size: "30x10", class: "form-control" %>
          </div>
          <div class="form-group">
          <%= f.submit "Create", class: "btn btn-primary" %>
          
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>